{
    "manifest_version": 3,
    "name": "Tab Reminder",
    "author": "junwei.wang@zju.edu.cn",
    "version": "1.0",
    "description": "Add a countdown to a web page to remind you to view it in time",
    "permissions": [
        "tabs",
        "storage",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "commands": {
        "start-timer": {
            "suggested_key": {
                "default": "Ctrl+Shift+K",
                "mac": "Command+Shift+K"
            },
            "description": "Start the timer"
        }
    },
    "icons": {
        "48": "alarm-clock48.png",
        "128": "alarm-clock128.png"
    }
}